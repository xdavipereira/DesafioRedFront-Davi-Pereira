.projects-grid {
  display: flex;
  flex-flow: row wrap;
  .projeto-item {
    margin-left: 1%;
    margin-top: 2%;
    margin-right: 1%;
    flex-shrink: 1;
    flex-basis: 205px;
    box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.12);
    
    border-radius: 5px;
    
    .img-produto {
      min-height: 160px;
        &:hover {
         opacity: 0.5;
         box-shadow: 0px 0px 15px 0px #FFF;
        }
    }
    .info-projeto {
      display: flex;
      flex-flow: column;
      align-items: flex-start;
      .nome-projeto {
        padding: .2em 0 .7em .4em;
        height: 50px;
        a {
          font-size: 1em;
          font-weight: 900;
          color: #6a6a6a;
          text-decoration: none;
        }
      }
      .autor-projeto {
        width: 100%;
        padding: 0 0 .5em .4em;
        font-size: 13px;
        color: #6a6a6a;
        border-bottom: 1px solid #e3e3e3;
          a {
              text-decoration: none;
              color: #6a6a6a;
          }
      }
      
      .categoria-projeto {
        padding: .6em .4em;
        min-height: 70px;
        a {
          font-size: .8em;
          color: #6a6a6a;
          &:hover {
            color: #505050;
          }
        }
      }
      
      .status-projeto {
          padding: .8em 0;
          width: 100%;
          background-color: #F6F6F6;
          border-top: 1px solid #e3e3e3;
          a {
            color: #6a6a6a;
            padding: 0 .5em;
            text-decoration: none;
            &:last-child {
                float: right;
                color: #6a6a6a;
            }
          }
      }
    }
  }
}
